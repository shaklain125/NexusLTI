{
  "files.exclude": {
    "**/*.git*": true,
    "**/*.md": true,
    "**/*.sh": true,
    "**/.svn": true,
    "**/*.docx": true,
    "**/*.pdf": true,

    ".env*": true,
    ".build-mode": true,
    ".hg": true,
    ".DS_Store": true,
    "*grader*": true,
    "*tool*": true,
    "*data*": true,
    "*compilation*": true,
    "*dump*": true,
    "*tester*": true,
    "CVS": true,
    "peerfeedback": true,
    "log*": true,

    "nexus/**/node_modules": true,
    "nexus/**/bin": true,
    "nexus/**/public": true,
    "nexus/**/tmp": true,
    "nexus/**/var": true,
    "nexus/**/*docker*": true,
    "nexus/**/*Docker*": true,
    "nexus/**/*.ru": true,
    "nexus/**/*ruby*": true,
    "nexus/**/*Rake*": true,
    "nexus/**/.rspec": true,
    "nexus/**/*-lock*": true,
    "nexus/**/*.lock": true,
    "nexus/**/migrate": false,
    "nexus/**/*.sql*": true,

    "nexus/circle*": true,
    "nexus/lib": false,
    "nexus/log": true
  },

  "ruby.rubocop.executePath": "/home/shakl/.rbenv/shims/",
  "ruby.rubocop.onSave": true,
  "[ruby]": {
    "editor.defaultFormatter": "misogi.ruby-rubocop"
  },

  "solargraph.commandPath": "/home/shakl/.rbenv/shims/solargraph",
  "solargraph.bundlerPath": "/home/shakl/.rbenv/shims/bundle",
  "solargraph.formatting": true,
  "solargraph.autoformat": true,

  "emmet.includeLanguages": {
    "erb": "html"
  },

  "[erb]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "aliariff.vscode-erb-beautify"
  },

  "files.associations": {
    "*.erb": "erb"
  }
}
